<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/drawArea"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_weight="6"
            android:orientation="horizontal"/>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageButton
                android:id="@+id/idHeart"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickHeart"
                android:src="@drawable/heart">
        </ImageButton>
        <ImageButton
                android:id="@+id/idMoon"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickMoon"
                android:src="@drawable/moon">
        </ImageButton>
        <ImageButton
                android:id="@+id/idCat"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickCat"
                android:src="@drawable/cat">
        </ImageButton>
        <ImageButton
                android:id="@+id/idRainbow"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickRainbow"
                android:src="@drawable/rainbow">
        </ImageButton>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageButton
                android:id="@+id/idSun"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickSun"
                android:src="@drawable/sun">
        </ImageButton>
        <ImageButton
                android:id="@+id/idRabbit"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickRabbit"
                android:src="@drawable/rabbit">
        </ImageButton>
        <ImageButton
                android:id="@+id/idHouse"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickHouse"
                android:src="@drawable/house">
        </ImageButton>
        <ImageButton
                android:id="@+id/idFrog"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="clickFrog"
                android:src="@drawable/frog">
        </ImageButton>
    </TableRow>

    <Button
            android:id="@+id/idClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Очистить холст"
            android:onClick="clickClear"/>
</TableLayout>